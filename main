import javax.swing.JOptionPane;

public class Main {

	
	public static void main(String[] args) {
		boolean error;
		String ax;
		int n = 0, n1 = 0, op = 0, op1 = 0;
		
		
		do{
			error = false;
			
			try{
			
				do{
					n = 1;
					ax = JOptionPane.showInputDialog(null, 
							 "1. Contratar Seguro \n"
